{
  "version": 2,
  "builds": [
    {
      "src": "client/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/projects",
      "destination": "https://portfolio-production-1f19.up.railway.app/api/projects"
    },
    {
      "source": "/api/contact",
      "destination": "https://portfolio-production-1f19.up.railway.app/api/contact"
    },
    {
      "source": "/api/admin/login",
      "destination": "https://portfolio-production-1f19.up.railway.app/api/admin/login"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; img-src 'self' data: https:; font-src 'self' data: https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; connect-src 'self' https:;"
        }
      ]
    }
  ]
}
